{
	"compilerOptions": {
		"target": "es3",
		"module": "commonjs",
		"allowJs": false,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"preserveConstEnums": true,
		"outDir": "lib",
		"sourceMap": true,
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"dom"
		],
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"removeComments": false,
    "jsx": "react",
    "jsxFactory": "h"
	},
	"exclude": [
		"node_modules"
	]
}
