{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"allowJs": false,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"preserveConstEnums": true,
		"outDir": "lib",
		"sourceMap": false,
		"lib": [
			"es6",
			"es7",
			"dom"
		],
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"removeComments": false,
    "jsx": "react",
    "jsxFactory": "h"
	},
	"include": [
		"src/**/*"
  ]
}
