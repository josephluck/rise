{
  "name": "rise",
  "version": "0.0.0",
  "description": "Rise Bakery",
  "main": "dist/index.js",
  "scripts": {
    "dev": "budo src/index.ts:index.js --dir src --live --pushstate --host=localhost --port=8888 -- -p [ tsify ]",
    "css": "crux -v ./src/crux.json -o ./src/assets/crux.css",
    "dist": "rm -rf lib && tsc && npm run browserify && npm run minify && npm run css && npm run assets",
    "browserify": "browserify lib/index.js > dist/index.js",
    "assets": "rm -rf dist && cp -R assets dist && cp index.html dist/index.html && cp index.html dist/200.html",
    "minify": "uglifyjs ./dist/index.js --compress --mangle -o ./dist/index.js"
  },
  "dependencies": {
    "budo": "^9.4.7",
    "flickity": "^2.0.5",
    "helix-react": "git://github.com/josephluck/helix-react",
    "tsify": "^3.0.1",
    "tslint": "^4.4.2",
    "tslint-config-standard": "^4.0.0",
    "typescript": "^2.2.1",
    "uglifyify": "^3.0.4",
    "uglifyjs": "^2.4.10"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "crux-css": "2.0.4"
  }
}
